@{
  Layout = "_Layout";
}
@model Factory.Models.Machine;
<h4>Add a new Machine</h4>
@using (Html.BeginForm())
{
  @Html.Label("Name:")
  @Html.TextBoxFor(model => model.MachineName,new {required="required"})
  @Html.Label("Description:")
  @Html.TextBoxFor(model => model.MachineDescription,new {required="required"})
  @Html.Label("Status:")
  @Html.DropDownListFor(model => model.MachineStatus, new List<SelectListItem>
  { new SelectListItem{Text="Operational", Value="Operational"},
    new SelectListItem{Text="Malfunctioning", Value="Malfunctioning"},
    new SelectListItem{Text="In Repair", Value="In Repair"}
  },"-Please select-")
  <br><br>
  <input type="submit" value="Add new Machine" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>