@using Factory.Models;
@{
  Layout = "_Layout";
}

<h1>List of Machines</h1>

<h2>Machines</h2>
@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
}
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId}) </li>
}
<br>
<p>@Html.ActionLink("Add New Machine", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>
<p>@Html.ActionLink("Back to Engineers", "Index","Engineers", null, new {@class="btn btn-primary btn-sm"})</p>