@{
  Layout = "_Layout";
}
@model Factory.Models.Machine
<h1>Assign an Engineer</h1>
<hr />
<h3>Assign an Engineer to this Machine: @Html.DisplayFor(model => model.MachineName)</h3>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Add" class="btn btn-success btn-sm" />
}
<hr />
<p>@Html.ActionLink("Cancel", "Details", new { id = Model.MachineId}, new {@class="btn btn-primary btn-sm"})</p>