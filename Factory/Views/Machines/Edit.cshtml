@{
  Layout = "_Layout";
}
@model Factory.Models.Machine
<h3>Edit Machine @Html.DisplayFor(model => model.MachineName)</h3>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Machine Name")
  @Html.EditorFor(model => model.MachineName,new {@required="required"})
  @Html.Label("Machine Description")
  @Html.EditorFor(model => model.MachineDescription,new {@required="required"})
  @Html.Label("Machine Status")
  @Html.DropDownListFor(model => model.MachineStatus, new List<SelectListItem>
  { new SelectListItem{Text="Operational", Value="Operational"},
    new SelectListItem{Text="Malfunctioning", Value="Malfunctioning"},
    new SelectListItem{Text="In Repair", Value="In Repair"}
  },"-Please select-")
  <br><br>
  <input type="submit" value="Save Changes" />
}
<hr />
<p>@Html.ActionLink("Back to Machines", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>