@{
  Layout = "_Layout";
}
@using Factory.Models;
<h1>Wrenching ain't easy.</h1>
<br>
<h2>Engineer Overview:</h2>
@if (@Model["engineers"].Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
}
@foreach (Engineer engineer in Model["engineers"])
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", "Engineers",new { id = engineer.EngineerId}) </li>
}
<br>
<p>@Html.ActionLink("See All Engineers", "Index", "Engineers", null, new {@class="btn btn-primary btn-sm"})</p>
<p>@Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new {@class="btn btn-success btn-sm"})</p>
<br>
<h2>Machines</h2>
@if (@Model["machines"].Count == 0)
{
  <h3>No Machines have been added yet!</h3>
}
@foreach (Machine machine in Model["machines"])
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", "Machines", new { id = machine.MachineId}) </li>
}
<br>
<p>@Html.ActionLink("See All Machines", "Index", "Machines", null, new {@class="btn btn-primary btn-sm"})</p>
<p>@Html.ActionLink("Add New Machine", "Create", "Machines", null, new {@class="btn btn-success btn-sm"})</p>