@{
  Layout = "_Layout";
}
@model DoctorsOffice.Models.Doctor;

<h4>Add a new doctor:</h4>

@using (Html.BeginForm())
{
  <h4>Enter Doctor's Name:</h4>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <input type="submit" value="Add Doctor" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>