@using Factory.Models;
@{
  Layout = "_Layout";
}

<h1>List of Engineers</h1>

<h2>Engineers</h2>
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
}
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId}) </li>
}
<br>
<p>@Html.ActionLink("Add New Engineer", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>